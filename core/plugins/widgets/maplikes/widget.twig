{% extends "core/templates/widget.twig" %}

{% block content %}
<frame pos="1 -1.5">
<quad pos="6 0" z-index="1" size="{{data.width}} 3" bgcolor="FFF"/>
<quad pos="6 0" size="30 3" bgcolor="aaa" />

<label pos="21 -1.5" z-index="2" size="30 3" text="{{data.percentage}}" halign="center" valign="center2" textcolor="000" textsize="1.5" />
{% if data.mapLike.vote == -1 %}
  <label pos="2.5 -1.5" z-index="0" size="5 3" text="-" halign="center" valign="center2" focusareacolor1="D00" action="{{actions.dislike}}" focusareacolor2="F00" />
  <label pos="39.5 -1.5" z-index="0" size="5 3" text="+" halign="center" valign="center" focusareacolor1="030" focusareacolor2="0f0" action="{{actions.like}}" />
{% elseif data.mapLike.vote == 1 %}
  <label pos="2.5 -1.5" z-index="0" size="5 3" text="-" halign="center" valign="center2" focusareacolor1="600" action="{{actions.dislike}}" focusareacolor2="F00" />
  <label pos="39.5 -1.5" z-index="0" size="5 3" text="+" halign="center" valign="center" focusareacolor1="0d0" focusareacolor2="0f0" action="{{actions.like}}" />
{% else %}
  <label pos="2.5 -1.5" z-index="0" size="5 3" text="-" halign="center" valign="center2" focusareacolor1="600" action="{{actions.dislike}}" focusareacolor2="F00" />
  <label pos="39.5 -1.5" z-index="0" size="5 3" text="+" halign="center" valign="center" focusareacolor1="030" focusareacolor2="0f0" action="{{actions.like}}" />
{% endif %}
</frame>
{% endblock %}